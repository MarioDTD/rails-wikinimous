<h1><%= @article.title %></h1>
<p><%= @article.content %></p>

<%= link_to "Back", articles_path, class: "btn btn-success" %>
<%= link_to "Update", edit_article_path(@article), class: "btn btn-primary" %>
<%= link_to "Delete #{@article.title}", article_path(@article), method: :delete, data: { confirm: "Are you sure you want to delete #{@article.title}?" }, class: "btn btn-danger" %>
